	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
		LeerCSV lista = LeerCSV.cargarListaDatos(new File("salesReport.bin"));
		SalesData[] arreglo = lista.datosEnArreglo();
		for (int i = 0; i < arreglo.length; i++) {
			String datosList = arreglo[i].getRegion() + ", " + arreglo[i].getCountry() + ", "
					+ arreglo[i].getItem_Type() + ", " + arreglo[i].getSales_Channel() + ", "
					+ arreglo[i].getOrder_Priority() + ", " + arreglo[i].getOrder_Date() + ", "
					+ arreglo[i].getOrder_ID() + ", " + arreglo[i].getShip_Date() + ", " + arreglo[i].getUnits_Sold()
					+ ", " + arreglo[i].getUnit_Price() + ", " + arreglo[i].getUnit_Cost() + ", "
					+ arreglo[i].getTotal_Revenue() + ", " + arreglo[i].getTotal_Cost() + ", "
					+ arreglo[i].getTotal_Profit();
			String[] dataRow = datosList.split(",");
			model.addRow(dataRow);
		}

	}

